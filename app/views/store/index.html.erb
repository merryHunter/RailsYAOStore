<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<% if alert %>
<p class="notice"><%= alert %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
	<div class="entry">
		<%= link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post, :remote => true %>
		<h3><%= product.title %></h3>
		<%= sanitize(product.description) %>
    <h3><%= @categories_titles[product.category_id] %></h3>
    <%= link_to 'Seller info', controller: 'store' , action: 'seller', :product_id => product.id %>
    <%= link_to 'Chat', {controller: 'store' , action: 'chat', :product_id => product.id} %>

    <div class="price_line">
			<span class="price"><%= number_to_currency(product.price) %></span>
      <% if current_user.private? || current_user.admin? || current_user.business %>
			<%= button_to 'Add To Cart', line_items_path(:product_id => product), :remote => true %>
          <% end %>
		</div>
	</div>
<% end %>