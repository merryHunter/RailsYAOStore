<div id="product_list">
	<h1>Listing products</h1>
  <% if notice %>
      <p id="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="notice"><%= alert %></p>
  <% end %>
<table>
	<% @products.each do |product| %>
		<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
			<td>
				<%= image_tag(product.image_url, :class => 'list_image') %>
			</td>
			
			<td class="list_description">
				<dl>
					<dt><%= product.title %></dt>
					<dd><%= truncate(strip_tags(product.description), :length => 80) %></dd>
				</dl>
			</td>
			<td>
         <%= product.category_id%>
      </td>
      <td>
        <%= product.price %> $
      </td>
			<td class="list_actions">
        <%= link_to "Show", product %><br />
        <% if current_user.private_id == product.owner_id ||
             current_user.business_id == product.owner_id ||
            current_user.admin? %>

				<%= link_to "Edit", edit_product_path(product) %><br />
				<%= link_to "Destroy", product, :confirm => "Are you sure?", :method => :delete %>
        <%#= link_to "Destroy", :controller => "products", :action => "destroy", :confirm => "Are you sure?", :id => product.id, :delete => true %>
      <% end %>
			</td>
		</tr>
	<% end %>
</table>
</div>

<br />
<% if current_user.private? || current_user.admin? || current_user.business %>
  <%= link_to 'New Product', new_product_path %>
<% end %>