<table>
  <tr>
    <th>Date</th>
    <th>Sender</th>
    <th>Message</th>
  </tr>
<% if @chat %>
  <% @chat.each do |c| %>
      <tr>
        <td><%= c.created_at %></td>
        <% if  c.sender_id != current_user.id  %>
            <td><%= c.sender_id %></td>

      <% else %>
        <td><%= current_user.email %></td>
            <% end %>
        <td><%= c.message %></td>
      </tr>
  <% end %>
</table>
<% end %>
<%= form_for(@message) do |f|%>
    <div class="field">
      <%= f.label :message %><br />
      <%= f.text_area :message, rows: 6%>
    </div>
    <div class="actions">
      <%= f.submit  :method => "post" %>
    </div>
<% end %>